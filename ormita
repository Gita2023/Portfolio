    <script>
        // Mobile menu toggle functionality
        function toggleMenu() {
            const menu = document.querySelector('.mobile-menu');
            menu.style.display = menu.style.display === 'flex' ? 'none' : 'flex';
        }
    
        // Video gallery scrolling functionality
        function scrollGallery(direction) {
            const gallery = document.querySelector('.video-gallery');
            const scrollAmount = 350;
            gallery.scrollBy({
                left: direction * scrollAmount,
                behavior: 'smooth'
            });
        }
    
        // Popup functionality
        function showDescription(descId) {
            const descriptions = {
                desc1: `
                    <p><strong>Sales Performance Dashboard</strong></p>
            <p>This dashboard provides a comprehensive overview of sales performance, including revenue trends and key metrics.</p>
            `, desc2: `
            <p><strong>Income Statement Dashboard</strong></p>
            <p>This project is an interactive financial dashboard using Microsoft Power BI to visualize key financial metrics, track trends, and support data-driven decisions, helping businesses improve profitability and efficiency.</p>
            `, desc3: `
            <p><strong>Financial Insights Tracker</strong></p>
            <p>This operational dashboard tracks key performance indicators to ensure efficient workflow and productivity.</p>
            `, desc4: `
            <p><strong>Retail Revenue Tracker</strong></p>
            <p>This financial overview dashboard highlights cash flow, assets, and liabilities for better financial planning.</p>
            `, desc5: `
            <p><strong>Real-estate Development Dashboard</strong></p>
            <p>This customer analytics dashboard reveals insights about customer demographics, preferences, and engagement.</p>
            `, desc6: `
            <p><strong>Crane Service Provider Dashboard</strong></p>
            <p>This project management dashboard monitors project timelines, milestones, and resource allocation effectively.</p>
            ` }; const popup = document.getElementById('popup'); const overlay = document.getElementById('overlay'); if (descriptions[descId]) { popup.innerHTML = ` ${descriptions[descId]}
            <button class="close-btn" onclick="closePopup()">Close</button> `; popup.style.display = 'block'; overlay.style.display = 'block'; } } function closePopup() { document.getElementById('popup').style.display = 'none'; document.getElementById('overlay').style.display
            = 'none'; }
            </script>

